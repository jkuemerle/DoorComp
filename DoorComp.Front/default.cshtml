@inherits ViewPage

@{
    ViewBag.Title = "Door Competition";
    string where = "";
    if(System.Configuration.ConfigurationManager.AppSettings.AllKeys.Contains("currentEvent")) {
        where = string.Format("Doors/{0}", System.Configuration.ConfigurationManager.AppSettings["currentEvent"]);
        if (!string.IsNullOrEmpty(where))
        {
            Gibraltar.Agent.Log.Information("Feature", "Home Page", "Home page to {0}.",where);
            Response.Redirect(where);
        }
        else {
            Gibraltar.Agent.Log.Information("Feature", "Home Page", "Home page to active events.");
            Response.Redirect("Events");
        }
    }
    else
    {
        Gibraltar.Agent.Log.Information("Feature", "Home Page", "Home page to active events.");
        Response.Redirect("Events");
    }
}

